{
  "name": "hurah/invoice",
  "description": "Simple invoice generator based on wkhtmltopdf and twig for Hurah.",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Anton Boutkam",
      "email": "anton@nui-boutkam.nl"
    }
  ],
  "type": "library",
  "require": {
    "php" : "^8.3",
    "hurah/logger": "^v1",
    "twig/twig": "3.4.3",
    "psr/log": "^1.1",
    "knplabs/knp-snappy": "^1.4",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3@dev",
    "ext-fileinfo": "*"
  },
  "autoload" : {
    "psr-4" : {
      "Hurah\\Invoice\\" : "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Hurah\\Invoice\\": "tests"
    }
  }
}
